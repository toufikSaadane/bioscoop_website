@model website.Models.Movie

@{
    ViewData["Title"] = "Create";
}

<div class="container" style="margin-top:5rem;">
    <h2 style="text-align:center;">Film toevoegen</h2>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" style="width:50rem;">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="Name" class="form-control" placeholder="Naam" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Description" class="form-control" placeholder="Beschrijving" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="MinimalAge" class="form-control" placeholder="Kijkwijzer" />
                    <span asp-validation-for="MinimalAge" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Duration" class="form-control" placeholder="Filmduur" />
                    <span asp-validation-for="Duration" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Image" class="form-control" placeholder="Link afbeelding" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Score" class="form-control" placeholder="Score" />
                    <span asp-validation-for="Score" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Genre" class="form-control" placeholder="Genre" />
                    <span asp-validation-for="Genre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Language" class="form-control" placeholder="Taal" />
                    <span asp-validation-for="Language" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="PriceChild" class="form-control" placeholder="Prijs kind" />
                    <span asp-validation-for="PriceChild" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="PriceAdult" class="form-control" placeholder="Prijs volwassen" />
                    <span asp-validation-for="PriceAdult" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="PriceSenior" class="form-control" placeholder="Prijs Senior" />
                    <span asp-validation-for="PriceSenior" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="WorkName" class="form-control" placeholder="Personeelsnaam" />
                    <span asp-validation-for="WorkName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" value="Create" class="btn btn-primary">Toevoegen</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
